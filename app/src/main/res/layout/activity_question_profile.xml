<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionProfileActivity">

<!--TODO: INCORPORATE SCROLL VIEW -->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:gravity="center_horizontal"-->
    <!-- for centering in middle. must set layout_width to center-->



    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolBar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--&gt;-->
        <!--&lt;!&ndash;app:layout_scrollFlags="scroll|enterAlways"&ndash;&gt;-->

        <!--<include layout="@layout/layout_note_toolbar" />-->
    <!--</android.support.v7.widget.Toolbar>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/starTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="##"
            android:gravity="center"
            />



        <TextView
            android:id="@+id/questionTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_weight=".25"
            android:ems="10"
            android:inputType="textPersonName"
            android:lines="4"
            android:minLines="4"
            android:text="questionEditText"
            android:background="@null"
            android:textSize="30sp" />
        <!-- android:background="@null"removes underline -->

        <EditText
            android:id="@+id/questionEditTextID"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_weight=".25"
            android:ems="10"
            android:inputType="textPersonName"
            android:lines="4"
            android:minLines="4"
            android:text="questionEditText"
            android:background="@null"
            android:textSize="30sp"
            android:visibility="gone"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/answerTextViewID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="10"
                    android:gravity="top"
                    android:text="AnswerTextView"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/commentButtonID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:visibility="visible"/>

                    <Button
                        android:id="@+id/editButtonID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"/>


                </LinearLayout>

                <Button
                    android:id="@+id/postAnswerButtonID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Answer"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:visibility="visible"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>