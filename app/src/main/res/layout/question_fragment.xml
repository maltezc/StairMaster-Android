<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/answerUpVoteId"
                android:text="upVote"
                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/answerScoreId"
                android:text="0"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/answerDownVoteId"
                android:text="downVote"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/starTextViewId"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:text="##" />

            <TextView
                android:id="@+id/questionTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight=".25"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:lines="4"
                android:minLines="4"
                android:text="questionEditText"
                android:textSize="30sp" />
            <!-- android:background="@null"removes underline -->

            <EditText
                android:id="@+id/questionEditTextId"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_weight=".25"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:lines="4"
                android:minLines="4"
                android:text="questionEditText"
                android:textSize="30sp"
                android:visibility="gone" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questionAuthorTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:hint="username here" />

        <TextView
            android:id="@+id/dateTimeStampTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DateTime Stamp" />

    </LinearLayout>


    <EditText
        android:id="@+id/questionEditTextId3"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_weight=".25"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:lines="4"
        android:minLines="4"
        android:text="questionEditText"
        android:textSize="30sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/answerEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lines="10"
                    android:text="AnswerEditText"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/commentButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/questionEditButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit" />

                    <Button
                        android:id="@+id/deleteQuestionButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete" />


                </LinearLayout>

                <Button
                    android:id="@+id/postAnswerButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:text="Post Answer"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>